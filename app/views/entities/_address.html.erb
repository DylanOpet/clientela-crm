<script type="text/javascript">
  $(document).ready(function() {
    $(".street").DefaultValue("<%= t('.street') %>");
    $(".city").DefaultValue("<%= t('.city') %>");
    $(".state").DefaultValue("<%= t('.state') %>");
    $(".zip").DefaultValue("<%= t('.zip') %>");
  });
</script>

<div class="fields">
  <%= f.text_area :street, :class => "street", :"data-default" => t('.street') %>
  <br/>
  <%= f.text_field :city, :class => "city", :"data-default" => t('.city') %>
  <%= f.text_field :state, :class => "state", :"data-default" => t('.state') %>
  <%= f.text_field :zip, :class => "zip", :"data-default" => t('.zip') %>

  <%= f.select :kind, options_with_translation(Address.kinds_for(resource)) %>
  <%= remove_child_link t("common.remove"), f %>
</div>
